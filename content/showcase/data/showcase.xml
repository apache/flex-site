            <image file="documobile1.png"/>
            <image file="documobile2.png"/>
            <image file="documobile3.png"/>
        </images>
    </app>

    <app title="Goal Manager" author="GoalGames GmbH" website="http://www.goal-games.de/" dev="Apache Flex 4.10 - PureMVC - Native Extentions">
         <description>GOAL 2014 - Football Manager is a free football management game for mobile phones and tablets, now available for iOS and Android.
            In this game a growing community of more than 3000 daily active managers from all over Europe face each other in a multi-level League system and a general Cup competition.
            To achieve victory, the managers have to decide tactics and formations, buy and sell players, plan individual trainings, study their opponents, build up a stadium and manage finances and sponsorships.</description>
        <links>
            <link header="iTunes" url="https://itunes.apple.com/de/app/goal-manager/id575222774?mt=8&amp;affId=1881396&amp;ign-mpt=uo%3D4">
             </link>
            <link header="Google Play" url="https://play.google.com/store/apps/details?id=air.de.goalgames.GoalManagerCH&amp;hl=de"/>
        </links>
        <images baseDir="Goal">
            <image file="Login.jpg"  />
            <image file="Stadion.jpg"/>
            <image file="Taktik.jpg"/>
        </images>
    </app>
